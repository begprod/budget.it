{
  "name": "budget.it",
  "version": "0.17.1",
  "description": "Another budget app, but this one is handy",
  "repository": "https://github.com/begprod/budget.it",
  "homepage": "https://begprod.github.io/budget.it/",
  "author": "Andrey Aratov",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test:unit:watch": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prettier:check": "prettier --check src/",
    "prettier:format": "prettier --write src/",
    "type:check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false --skipLibCheck",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "deploy": "gh-pages -d dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "@formkit/drag-and-drop": "^0.5.3",
    "@vueuse/core": "^10.7.1",
    "date-fns": "^3.0.6",
    "lucide-vue-next": "^0.469.0",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@pinia/testing": "^0.1.3",
    "@rushstack/eslint-patch": "^1.6.1",
    "@types/jsdom": "^21.1.6",
    "@types/uuid": "^9.0.7",
    "@types/web-bluetooth": "^0.0.20",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "gh-pages": "^6.1.1",
    "husky": "^8.0.3",
    "jsdom": "^24.0.0",
    "prettier": "^3.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.4.19",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.6.1",
    "vue-tsc": "^2.2.8"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
